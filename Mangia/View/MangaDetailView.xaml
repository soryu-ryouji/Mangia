<UserControl x:Class="Mangia.View.MangaDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mangia.View"
             mc:Ignorable="d" 
             MinHeight="300" MinWidth="400"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
             Background="White">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧 漫画封面与标题 -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,32,0,0">
            <Image Source="{Binding CoverPath}" Width="180" Height="240" Stretch="UniformToFill" Margin="0,0,0,16"/>
            <TextBlock Text="{Binding MangaTitle}" FontSize="20" FontWeight="Bold" TextAlignment="Center" />
        </StackPanel>

        <!-- 右侧 章节列表 -->
        <StackPanel Grid.Column="1" Margin="32,0,0,0">
            <TextBlock Text="章节列表" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
            <ListBox ItemsSource="{Binding Chapters}" DisplayMemberPath="Name"
                     BorderBrush="#ddd" BorderThickness="1" MinWidth="320" MinHeight="340"
                     Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>