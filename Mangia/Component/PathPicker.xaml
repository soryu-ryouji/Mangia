<UserControl x:Class="Mangia.Component.PathPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="480"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--左侧标签-->
        <TextBlock Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   TextAlignment="Left"
                   Margin="0,0,5,0"
                   FontSize="14"
                   Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <!--路径输入框-->
        <TextBox Grid.Column="1"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"
                 TextAlignment="Left"
                 Margin="0,0,5,0"
                 FontSize="14"
                 Padding="3,0"
                 Text="{Binding Path, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />

        <!--路径选择按钮-->
        <Button Grid.Column="2"
                VerticalAlignment="Center"
                Content="..."
                FontSize="16"
                Padding="3,0"
                Click="OnBrowseClick"/>
    </Grid>
</UserControl>